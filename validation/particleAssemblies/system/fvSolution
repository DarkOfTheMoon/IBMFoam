solvers
{
    p
    {
        solver          GAMG;
        smoother        DIC;
        preconditioner  DIC;
        tolerance       1e-8;
        relTol          0;
    }
    pFinal
    {
        $p;
        relTol  0;
    }

    U
    {
        solver          PBiCG;
        preconditioner  DILU
        tolerance       1e-8;
        relTol          0;
    }

    UFinal
    {
        $U;
        relTol  0;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 1;
    nCorrectors     2;
    pRefCell        0;
    pRefValue       0;
    pressureCorrection true;

    residualControl
    {
        p
        {
            tolerance   1e-6;
            relTol      0;
        }
        U
        {
            tolerance   1e-6;
            relTol      0;
        }
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 1;
    pRefCell        0;
    pRefValue       0;
    pressureCorrection true;

    residualControl
    {
        p 1e-6;
        U 1e-6;
    }
}


